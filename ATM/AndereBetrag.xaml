<Window x:Class="ATM.AndereBetrag"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM"
        mc:Ignorable="d"
        Title="AndereBetrag" Height="200" Width="400" Background="Gray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="betrag_input" Grid.Row="0" Margin="30 20 40 20"></TextBox>
        <Button Grid.Row="1" Margin="30 20 40 20"
                FontSize="20" FontWeight="Bold" Click="Button_Click">Bestätigen</Button>
    </Grid>
</Window>
